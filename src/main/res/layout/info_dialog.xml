<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/dialog_vertical_margin"
    android:paddingLeft="@dimen/dialog_horizontal_margin"
    android:paddingRight="@dimen/dialog_horizontal_margin"
    android:paddingTop="@dimen/dialog_vertical_margin" 
    android:gravity="center_horizontal"  
    >

    <TextView
        android:id="@+id/info_app_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="25dip"
        android:text="@string/app_copyright"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" 
        style="@style/EngravedText"/>

     <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical|center_horizontal"
       android:text="@string/app_contact_us"
       android:textColor="@color/green"
       android:paddingTop="25dip"
       android:textSize="14sp" />
       
    <TextView
        android:id="@+id/info_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="5dip"
        android:text="@string/app_credits"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />
      
	<LinearLayout 
	   android:id="@+id/acknowledge_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" 
       android:visibility="gone"
       android:paddingTop="25dip"
       >
	   <TextView
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:gravity="center_vertical|center_horizontal"
	       android:text="@string/app_acknowledgement_title"
		   android:id="@+id/tv_acknowledgement_title"
	       android:textColor="@color/green"
	       android:textSize="14sp" />
	    
	   <TextView
	       android:id="@+id/info_acknowledgement"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:autoLink="all"
	       android:gravity="center_vertical|center_horizontal"
	       android:paddingTop="5dip"
	       android:text="@string/app_acknowledgement"
	       android:textSize="12sp" />
   </LinearLayout>


</LinearLayout>